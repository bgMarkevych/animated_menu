<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="100dp">

    <FrameLayout
        android:id="@+id/animated_menu_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="100dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/animated_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/animated_menu_footer_container"
        android:layout_below="@id/animated_menu_header_container" />

    <FrameLayout
        android:id="@+id/animated_menu_footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="100dp" />

</RelativeLayout>